import cv2

faceCas=cv2.CascadeClassifier("resources/haarsascade_frontalface_default.xml") #adding the cv package for face detection
img=cv2.imread('resources/bday.jpg')                                           #add any pic to the source file and append it's location
imgGray=cv2.cvtColor(img,cv2.COLOR_BGR2GRAY)

faces=faceCas.detectMultiScale(imgGray,1.1,4)                                  #bounding box to put rectangle around the faces

for (x,y,w,h) in faces:
    cv2.rectangle(img,(x,y),(x+w,y+h),(255,0,0),2)

cv2.imshow('img',img)
cv2.waitKey()
